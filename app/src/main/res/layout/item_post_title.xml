<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:id="@+id/img_placeholder_post_title_item"
        android:src="@mipmap/placeholder_img_list"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha=".5"
        android:visibility="visible"
        android:layout_alignRight="@+id/img_placeholder_post_title_item"
        android:layout_alignEnd="@+id/img_placeholder_post_title_item"
        android:layout_alignLeft="@+id/img_placeholder_post_title_item"
        android:layout_alignStart="@+id/img_placeholder_post_title_item"
        android:layout_alignTop="@+id/img_placeholder_post_title_item"
        android:layout_alignBottom="@+id/img_placeholder_post_title_item">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/img_placeholder_post_title_item"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/img_placeholder_post_title_item"
        android:layout_alignEnd="@+id/img_placeholder_post_title_item"
        android:layout_alignLeft="@+id/img_placeholder_post_title_item"
        android:layout_alignStart="@+id/img_placeholder_post_title_item">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/textViewTitle"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            android:singleLine="true"
            android:gravity="right"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/textViewExcerpt"
            android:layout_below="@+id/textViewTitle"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/textViewDate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/white"
            android:gravity="center_vertical|right"
            android:padding="5dp"
            android:maxLines="2"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/textViewDate"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:singleLine="true"
            android:layout_alignLeft="@+id/textViewTitle"
            android:layout_alignStart="@+id/textViewTitle"
            android:gravity="right"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp" />

    </RelativeLayout>

</RelativeLayout>